<Window x:Class="PDFCon.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFCon"
        mc:Ignorable="d"
        Title="AboutWindow" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="● ソフト名: PDFCon" FontSize="14" Margin="0,5"/>
            <TextBlock Text="● 作成者: IgaSystems" FontSize="14" Margin="0,5"/>
            <TextBlock Text="● バージョン: 1.0.1" FontSize="14" Margin="0,5"/>
            <Button Content="閉じる" Width="60" Margin="0,15,0,0" HorizontalAlignment="Center"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
